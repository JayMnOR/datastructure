def pot(a, b):
    if (b==0):
        return 1
    else:
        return(a*pot(a, b-1))
def div(a, b, res):
    if res >= 3:
        return 0
    else:
        if (res==0):
           return int(a / b) + div(float(a/b)-int(a/b), b, res + 1)
        else:
           return a / b + div(float(a/b)-int(a/b), b, res + 1)

